			margin-left: 2em;
			margin-top: 1.6em;
			margin-bottom: 0em;
		}

		.tags {
			margin: 0.5em;
		}

		.TagList {
			margin: 0em;
			width: 9em;
			
		}

		.Gamer {
			color: white;
			display: block;
			height: 100%;
			display: flex;
			align-items: center;
			margin-left: 0.9em;
			background: #4680F0; 
			border-radius: 15px;
			padding-left: 1em;
			padding-top: 0.5em;
			padding-bottom: 0.5em;
			font-size: 1em;
		}

		.GamerImg {
