		}

		.AbtMeContent {
			margin-top: 0em;
			margin-left: 4em;
		}

		.ButtContainer {
			display: flex;
			justify-content: space-evenly;
			text-align: center;
			align-items: center;
			margin-top: 15em;
			

		}

		.LetsChatter {
			display: flex;
			justify-content: space-evenly;
			text-align: center;
			align-items: center;
			border: none;
			background: #3AE27D; 
			border-radius: 30px;
			font-family: Staatliches;
			color: white;
			font-size: 2em;
			padding-left: 5em;
			padding-right: 4em;
			padding-top: 0.5em;
			padding-bottom: 0.5em;
			transition-duration: 0.2s;

		}

		.LetsChatter:hover {
	            background: #3eb489;
	            color: white;
				cursor: pointer;
		}
		
		.ButtImg {
			text-align: center;
	            width: 4vh;
	            height: 4vh;
			padding-left: 1em;
			
			
		}

		.NavBarContainer {
			padding-top: 2em;
			text-align: center;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.NavBar {
			text-align: center;
	            list-style-type: none;
				display: flex;
				justify-content: space-evenly;
				text-align: center;
				align-items: center;
				flex-wrap: wrap;
	            margin: 0;
	            overflow: hidden;
	            width: 100%;
	            background: rgba(255, 253.94, 253.94, 0.80); 
	            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25); 
	            border-radius: 1px; border: 1px #F6F6F6 solid;
				padding-left: 0em;
	        }

	        .NavIcon {

	        float: left;
	        }

	        .NavIcon .NavButtLink {
	        display: block;
	        color: white;
	        text-align: center;
	        padding-top:  16px;
	        padding-bottom:  16px;
	        text-decoration: none;
	        }

	        .NavButt:hover{
	        background: rgba(0, 0, 0, 0.05); 
	        border-radius: 25%;
	    }

	        .NavButt {

	            width: 5vh;
	            height: 5vh;
	        }

